<% include ../partials/header %>
<div class="container">
	<div class="row" >
			<h1 style="text-align: center;">Create a new campground</h1>
			<div style="width: 30%; margin: 25px auto;">
				<form action="/campgrounds" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="campground[name]" placeholder="Type in a camp name">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="campground[image]" placeholder="Type in a camp image URL">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="campground[description]" placeholder="Type in a description of the campground">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">Make a new camp!</button>
					</div>
				</form>
				<a href="/campgrounds">Back to the campground page.</a>

			</div>
	</div>
</div>


<% include ../partials/footer %>