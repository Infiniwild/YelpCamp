<% include ../partials/header %>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-4">
			<h3>Create a new campground</h3>
				<form action="/campgrounds" method="POST">
					<div class="form-group">
						<label for="nameInput">Name</label>
						<input type="text" class="form-control" id="nameInput" name="campground[name]" placeholder="name">
					</div>
					<div class="form-group">
						<label for="priceInput">Price</label>
						<input type="number" class="form-control" id="priceInput" name="campground[price]" placeholder="price" min="0.01" step="0.01">
					</div>
					<div class="form-group">
						<label for="imageInput">Image</label>
						<input type="text" class="form-control" id="imageInput" name="campground[image]" placeholder="image">
					</div>
					<div class="form-group">
						<label for="descriptionInput">Description</label>
						<input type="text" class="form-control" id="descriptionInput" name="campground[description]" placeholder="description">
					</div>
					<button type="submit" class="btn btn-primary btn-lg btn-block">Create new campground</button>
				</form>
				<a href="/campgrounds">Back to the campground page.</a>
		</div>
	</div>
</div>
<% include ../partials/footer %>