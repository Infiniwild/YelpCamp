<% include ../partials/header %>
<div class="container">
	<header class="jumbotron">
		<h1 class="display-3">Welcome to YelpCamp.</h1>
		<p class="lead">View our handpicked campgrounds from all over!</p>
		<p><a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a new campground</a></p>
	</header>
	<div class="row">
		<div class="col-12">
			<h3>Our most popular campgrounds</h3>
		</div>
	</div>
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% if(currentUser) { % >
			<% campgrounds.filter(campground => campground.author.id.equals(currentUser._id)).forEach(function(campground) { %>
				<div class="col-md-3 col-sm-6">
					<div class="card">
						<img src="<%= campground.image %>" class="card-img-top">
						<div class="card-body">
							<h5 class="card-title"><%= campground.name %></h5>
							<p class="text-right">
								<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">More info</a>
							</p>
						</div>
					</div>
				</div>
			<% }) %>
		<% } %>
		<% if(!currentUser) { %>
			<div class="col-md-3 col-sm-6">
				<h4>Please login to view campgrounds</h4>
			</div>
		<% } %>
	</div>
</div>
<% include ../partials/footer %>
