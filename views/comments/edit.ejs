<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Update your comment for <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" type=text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Post your edited comment!</button>
            </div>
            </form>
            <a href="/campgrounds">Back to the campground page.</a>
        </div>
</div>
</div>

<% include ../partials/footer %>